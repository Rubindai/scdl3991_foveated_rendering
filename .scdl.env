# ================= SCDL Pipeline Config (.scdl.env) =================
# This file is auto-loaded by run_linux_blender.sh / run_windows_blender_wsl.sh.
# Edit values here to control preview, DINO, and final render behavior.

# -------- Project / Paths --------
# SCDL_PROJECT_DIR=/home/rubin/uni/scdl3991_foveated_rendering
BLENDER_EXE=/home/rubin/blender-4.5.4-linux-x64/blender
# WSL path to Windows Blender executable
# BLENDER_EXE=/mnt/d/Programs/blender/blender.exe

BLEND_FILE=blender_files/car2.blend


# -------- Logging / Device --------
SCDL_LOG_MODE=both                  # stdout|file|both
# SCDL_LOG_FILE=/path/to/pipeline.log
SCDL_CYCLES_DEVICE=OPTIX
SCDL_EXPECTED_GPU="RTX 3060"
# SCDL_CLEAR_OUT_DIR=0              # set to 0 to keep previous out/ artefacts


# -------- Preview (Step 1) --------
SCDL_PREVIEW_SHORT=448
SCDL_PREVIEW_SPP=16
SCDL_PREVIEW_MIN_SPP=4
SCDL_PREVIEW_ADAPTIVE_THRESHOLD=0.04
SCDL_PREVIEW_DENOISE=1
SCDL_PREVIEW_BLUR_GLOSSY=0.2
SCDL_PREVIEW_CAUSTICS=0
SCDL_PREVIEW_SEED=42
# SCDL_PREVIEW_CLAMP_DIRECT=10
# SCDL_PREVIEW_CLAMP_INDIRECT=10


# -------- Saliency (Step 2) --------
SCDL_DINO_LOCAL_DIR=models/dinov3-vitl16
SCDL_DINO_SIZE=336
SCDL_MASK_DEVICE=cuda:0
SCDL_PERC_LO=0.60
SCDL_PERC_HI=0.995
SCDL_MASK_GAMMA=2.0
SCDL_MORPH_K=3
SCDL_USER_IMPORTANCE_PREVIEW=1
SCDL_USER_IMPORTANCE_PREVIEW_MODE=gray
SCDL_USER_IMPORTANCE_PREVIEW_ALPHA=0.6
# SCDL_PREVIEW_PATH=/custom/path/preview.png
# SCDL_OUT_DIR=/tmp/scdl_out


# -------- Final Render (Step 3) --------
SCDL_FOVEATED_BASE_SPP=192
SCDL_FOVEATED_MIN_SPP=32
SCDL_FOVEATED_MAX_SPP=768
SCDL_ADAPTIVE_THRESHOLD=0.03
SCDL_ADAPTIVE_MIN_SAMPLES=32
SCDL_FOVEATED_AUTOSPP=1
SCDL_FOVEATED_FILTER_GLOSSY=0.5
SCDL_FOVEATED_CAUSTICS=0
# SCDL_FOVEATED_CLAMP_DIRECT=10
# SCDL_FOVEATED_CLAMP_INDIRECT=10


# -------- Launcher / Advanced --------
# SCDL_DINO_PYTHON=/path/to/python   # override interpreter for Step 2
# SCDL_USE_GPU=1                     # additional launcher hints (reserved)
# SCDL_HALTTIME=90                   # halt time override for Blender renders
